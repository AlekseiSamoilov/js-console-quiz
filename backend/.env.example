# =================================
# JS Console Quiz API Configuration
# =================================

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# =================================
# Security & Authentication
# =================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Session token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =================================
# Database Configuration
# =================================
# Full database URL (overrides individual settings below if provided)
DATABASE_URL=

# Individual database settings (used if DATABASE_URL is not set)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=quiz_user
POSTGRES_PASSWORD=quiz_password
POSTGRES_DB=js_console_quiz

# =================================
# API Configuration
# =================================
API_V1_STR=/api/v1
PROJECT_NAME=JS Console Quiz API
VERSION=1.0.0

# =================================
# CORS Settings
# =================================
# Allowed origins for CORS (comma-separated for multiple origins)
# Development origins:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# =================================
# Session Management
# =================================
# How many days to keep inactive sessions before cleanup
SESSION_CLEANUP_DAYS=90

# =================================
# Logging
# =================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =================================
# Development Settings
# =================================
# Enable automatic database table # Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql+asyncpg://quiz_user:quiz_password@localhost:5432/js_console_quiz
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=quiz_user
POSTGRES_PASSWORD=quiz_password
POSTGRES_DB=js_console_quiz

# API
API_V1_STR=/api/v1

# CORS - add your frontend URLs
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]